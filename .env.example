# Required
ADMIN_PASSWORD=change-me
SLACK_SIGNING_SECRET=
SLACK_BOT_TOKEN=

# Optional Telegram (required if you enable Telegram)
TELEGRAM_BOT_TOKEN=
# Required when Telegram is enabled. Grail will require incoming requests to include:
# `X-Telegram-Bot-Api-Secret-Token: <value>`
TELEGRAM_WEBHOOK_SECRET=

# Optional web tools
# Used by grail-web-mcp for web_search/web_fetch (Brave Search API).
BRAVE_SEARCH_API_KEY=
# Nanobot-compatible name also supported:
BRAVE_API_KEY=

# OpenAI auth (pick one)
# 1) Recommended: store in Railway env as OPENAI_API_KEY (no dashboard secret storage needed)
OPENAI_API_KEY=
#
# 2) Optional: enable encrypted secret storage for dashboard-entered keys (OpenAI + Slack)
GRAIL_MASTER_KEY=

# Optional
BASE_URL=
GRAIL_DATA_DIR=/data
CODEX_HOME=/data/codex
CODEX_BIN=codex

# Optional: override Codex ChatGPT device login endpoints (rare)
CODEX_ISSUER=https://auth.openai.com
CODEX_CLIENT_ID=
