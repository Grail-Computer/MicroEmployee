# Required
ADMIN_PASSWORD=change-me
SLACK_SIGNING_SECRET=
SLACK_BOT_TOKEN=

# Optional Telegram (required if you enable Telegram)
TELEGRAM_BOT_TOKEN=
# Required when Telegram is enabled. FastClaw will require incoming requests to include:
# `X-Telegram-Bot-Api-Secret-Token: <value>`
TELEGRAM_WEBHOOK_SECRET=

# Optional WhatsApp Cloud API (required if you enable WhatsApp)
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_VERIFY_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
# Required when WhatsApp is enabled. Used to verify X-Hub-Signature-256.
WHATSAPP_APP_SECRET=

# Optional Discord (required if you enable Discord)
DISCORD_BOT_TOKEN=
# Discord application public key for webhook signature verification.
DISCORD_PUBLIC_KEY=

# Optional Microsoft Teams (required if you enable Teams)
MSTEAMS_APP_ID=
MSTEAMS_APP_PASSWORD=

# Optional web tools
# Used by grail-web-mcp for web_search/web_fetch (Brave Search API).
BRAVE_SEARCH_API_KEY=
# Nanobot-compatible name also supported:
BRAVE_API_KEY=

# Optional GitHub (repo cloning + private repos)
# Required for GitHub device login in /admin/auth (create an OAuth app with device flow enabled).
GITHUB_CLIENT_ID=
# Optional: override stored token (supports device login token fallback).
GITHUB_TOKEN=
# Optional: requested scopes for device login (default: repo).
GITHUB_OAUTH_SCOPE=repo

# OpenAI auth (pick one)
# 1) Recommended: store in Railway env as OPENAI_API_KEY (no dashboard secret storage needed)
OPENAI_API_KEY=
#
# 2) Optional: enable encrypted secret storage for dashboard-entered keys (OpenAI + Slack)
GRAIL_MASTER_KEY=

# Optional
BASE_URL=
GRAIL_WORKER_CONCURRENCY=2
GRAIL_DATA_DIR=/data
CODEX_HOME=/data/codex
CODEX_BIN=codex
# Optional: child Codex process log level. Default is `warn`.
GRAIL_CODEX_RUST_LOG=warn
# Optional: set to 1 to keep Codex INFO/DEBUG stderr lines.
GRAIL_CODEX_STDERR_INFO=0
# Optional: set to 1 to disable Codex stderr noise filtering entirely.
GRAIL_CODEX_STDERR_VERBOSE=0

# Optional: override Codex ChatGPT device login endpoints (rare)
CODEX_ISSUER=https://auth.openai.com
CODEX_CLIENT_ID=

# Optional browser/novnc service used for manual credential seeding and CDP automation.
GRAIL_BROWSER_ENABLED=0
GRAIL_BROWSER_ENABLE_NOVNC=1
GRAIL_BROWSER_HOME=/data/browser-profiles
GRAIL_BROWSER_PROFILE_NAME=default
GRAIL_BROWSER_DISPLAY=:1
GRAIL_BROWSER_CDP_PORT=9222
GRAIL_BROWSER_CDP_URL=http://127.0.0.1:9222
GRAIL_BROWSER_CDP_BIND=127.0.0.1
GRAIL_BROWSER_VNC_PORT=5900
GRAIL_BROWSER_NOVNC_URL=http://127.0.0.1:6080/vnc.html?autoconnect=1&resize=remote
# If unset, FastClaw will derive this from BASE_URL (or RAILWAY_PUBLIC_DOMAIN)
# as: <base>/vnc.html?autoconnect=1&resize=remote
GRAIL_BROWSER_NOVNC_PORT=6080
GRAIL_BROWSER_NOVNC_BIND=0.0.0.0
# Optional: set a password for noVNC sessions (recommended in production).
GRAIL_BROWSER_VNC_PASSWORD=
GRAIL_BROWSER_HEADLESS=0
